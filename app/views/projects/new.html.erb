<%= render 'shared/page_title', title: "create a new project" %>
<%= render 'shared/errors' , obj: @project%>

<div class="row mt-5">
	<div class="col-md-12">

   <%= form_for(@project, :html => {class: "form-group row", role: "form"}) do |f| %>
    <div class="form-group row mb-3">
	    <div class="col-form-label col-md-2 text-end">
		  <%= f.label :Title %>
	   </div>

	   <div class="col-md-8">
		  <%= f.text_field :title, class: "form-control", placeholder: "Name of project" , autofocus: true %>
 	   </div>
   </div>

   <div class="form-group row mb-3">
    <div class=" offset-md-2 col-md-10">
      <%= f.submit class:"btn btn-primary btn-lg"%>
    </div>
   </div>
   <% end %>

    



 </div>
</div>